---
import '../styles/global.css'; // Pastikan Tailwind masuk ke sini
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | AetherSub Admin</title>
    <link rel="icon" type="image/x-icon" href="/asset/icon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/asset/apple-touch-icon.png" />
  </head>
  <body class="min-h-screen bg-gray-50 font-sans">
    <nav class="sticky top-0 z-50 bg-slate-900 p-4 text-white">
      <div class="container mx-auto flex items-center justify-between">
        <div class="flex items-center gap-6">
          <span class="font-bold text-lime-500">AetherSub Admin</span>
          <div class="flex gap-4 text-sm">
            <a href="/admin/dashboard" class="hover:text-lime-400">Semua Produk</a>
            <a href="/admin/upload" class="hover:text-lime-400">Tambah Baru</a>
          </div>
        </div>
        <button id="logout-btn" class="rounded bg-red-500/20 px-3 py-1 text-xs text-red-400"
          >Logout</button
        >
      </div>
    </nav>

    <div class="py-10">
      <slot />
    </div>

    <script>
      import { supabase } from '../lib/supabase';
      document.getElementById('logout-btn')?.addEventListener('click', async () => {
        await supabase.auth.signOut();
        window.location.href = '/admin/login';
      });
    </script>
  </body>
</html>
