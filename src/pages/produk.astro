---
// src/pages/produk.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import { supabase } from '../lib/supabase';

const title = 'Katalog Produk | AetherSub';

// 1. Ambil data produk dari Supabase
const { data: products, error } = await supabase
  .from('products')
  .select('*')
  .order('id', { ascending: false });

if (error) {
  console.error('Error fetching products:', error.message);
}

// 2. Ambil kategori unik secara dinamis agar tidak error "categories is not defined"
const categories = products ? [...new Set(products.map((p) => p.category).filter(Boolean))] : [];

// 3. Logika Filter Kategori via URL (?cat=nama-kategori)
const catParam = Astro.url.searchParams.get('cat');
const filteredProducts =
  catParam && products
    ? products.filter((p) => p.category?.toLowerCase() === catParam.toLowerCase())
    : products || [];

// 4. Fungsi Format Rupiah
const formatRupiah = (number) => {
  if (!number) return 'Rp 0';
  return 'Rp ' + number.toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.');
};
---

<BaseLayout title={title}>
  <main class="min-h-screen bg-gray-50 pt-28 pb-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mb-12 text-center" data-aos="fade-up">
        <h1 class="text-4xl font-black tracking-tighter text-gray-900 uppercase sm:text-5xl">
          Koleksi <span class="text-lime-600">Jersey</span>
        </h1>
        <p class="mx-auto mt-4 max-w-2xl text-gray-600">
          Jelajahi berbagai pilihan jersey kualitas premium dengan teknologi sublimasi terbaik untuk
          tim Anda.
        </p>
      </div>

      <div class="flex flex-col gap-8 lg:flex-row">
        <aside class="w-full flex-shrink-0 lg:w-64" data-aos="fade-right">
          <div class="sticky top-32 rounded-2xl border border-gray-100 bg-white p-6 shadow-sm">
            <h2 class="mb-4 flex items-center gap-2 text-lg font-bold text-gray-900">
              <i class="fa-solid fa-filter text-lime-600"></i> Kategori
            </h2>
            <div class="space-y-2">
              <a
                href="/produk"
                class={`block px-4 py-2.5 rounded-xl text-sm font-semibold transition-all ${!catParam ? 'bg-lime-600 text-white shadow-md shadow-lime-200' : 'text-gray-600 hover:bg-gray-100'}`}
              >
                Semua Produk
              </a>
              {
                categories.map((cat) => (
                  <a
                    href={`/produk?cat=${cat.toLowerCase()}`}
                    class={`block rounded-xl px-4 py-2.5 text-sm font-semibold capitalize transition-all ${catParam?.toLowerCase() === cat.toLowerCase() ? 'bg-lime-600 text-white shadow-md shadow-lime-200' : 'text-gray-600 hover:bg-gray-100'}`}
                  >
                    {cat}
                  </a>
                ))
              }
            </div>
          </div>
        </aside>

        <div class="flex-1">
          {
            filteredProducts.length > 0 ? (
              <div class="grid grid-cols-2 gap-4 sm:gap-6 lg:grid-cols-3">
                {filteredProducts.map((product) => (
                  <div
                    class="group flex flex-col overflow-hidden rounded-2xl border border-gray-100 bg-white shadow-sm transition-all duration-300 hover:shadow-xl"
                    data-aos="fade-up"
                  >
                    <div class="relative aspect-[4/5] overflow-hidden bg-gray-100">
                      <img
                        src={product.image_src}
                        alt={product.name}
                        class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
                      />
                      {product.is_new && (
                        <span class="absolute top-3 left-3 rounded-md bg-lime-500 px-2 py-1 text-[10px] font-black tracking-wider text-white uppercase">
                          New
                        </span>
                      )}
                    </div>

                    <div class="flex flex-1 flex-col p-4">
                      <p class="mb-1 text-[10px] font-bold tracking-widest text-lime-600 uppercase">
                        {product.category}
                      </p>
                      <h3 class="mb-2 line-clamp-2 text-sm font-bold text-gray-900 transition-colors group-hover:text-lime-600 md:text-base">
                        {product.name}
                      </h3>

                      <div class="mt-auto pt-3">
                        <div class="mb-4 flex items-baseline gap-2">
                          <span class="text-lg font-black text-gray-900">
                            {formatRupiah(product.price)}
                          </span>
                          {product.old_price && (
                            <span class="text-xs text-gray-400 line-through">
                              {formatRupiah(product.old_price)}
                            </span>
                          )}
                        </div>

                        <button
                          class="open-product-modal w-full transform rounded-lg bg-gray-900 py-2.5 text-xs font-bold text-white shadow-lg shadow-gray-100 transition-all duration-300 hover:bg-lime-600 active:scale-95"
                          data-product-id={product.id}
                          data-product-name={product.name}
                          data-product-price={product.price}
                          data-product-images={JSON.stringify(product.images)}
                          data-product-description={product.description}
                        >
                          Lihat Detail
                        </button>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            ) : (
              <div class="rounded-3xl border border-dashed border-gray-300 bg-white py-20 text-center">
                <i class="fa-solid fa-box-open mb-4 text-5xl text-gray-200" />
                <p class="font-medium text-gray-500">Belum ada produk untuk kategori ini.</p>
                <a href="/produk" class="mt-4 inline-block font-bold text-lime-600 hover:underline">
                  Lihat Semua Produk
                </a>
              </div>
            )
          }
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
