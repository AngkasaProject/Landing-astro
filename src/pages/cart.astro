---
// src/pages/cart.astro
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Keranjang - AetherSub">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 mt-5">
    <h1
      class="text-4xl font-extrabold text-gray-900 mb-8 border-b-2 border-red-600 pb-2"
    >
      Keranjang Anda
    </h1>

    <div class="flex flex-col md:flex-row gap-8">
      <div class="md:w-2/3">
        <div id="cart-items-container" class="space-y-6">
          <p id="loading-message" class="text-gray-500 text-center py-10">
            Memuat Keranjang...
          </p>
        </div>

        <div class="mt-8 pt-4 border-t">
          <a
            href="/"
            class="text-red-600 font-medium hover:text-red-800 flex items-center"
          >
            <i class="fa-solid fa-arrow-left fa-sm mr-2"></i>
            Lanjutkan Belanja
          </a>
        </div>
      </div>

      <div class="md:w-1/3 sticky sticky-top-20">
        <div class="bg-white p-6 rounded-xl shadow-2xl">
          <h2 class="text-2xl font-bold text-gray-900 mb-4 border-b pb-2">
            Ringkasan Pesanan
          </h2>

          <div class="space-y-2 text-gray-700">
            <div class="flex justify-between">
              <span>Subtotal</span>
              <span id="subtotal-display">Rp 0</span>
            </div>
            <div class="flex justify-between">
              <span>Diskon (5% Min. Rp 300rb)</span>
              <span id="discount-display" class="text-green-600">Rp 0</span>
            </div>
            <div class="flex justify-between">
              <span>Pengiriman</span>
              <span id="shipping-display" class="text-green-600 font-medium"
                >Gratis (Dibahas via WA)</span
              >
            </div>
          </div>

          <div class="border-t pt-4 mt-4">
            <div
              class="flex justify-between text-2xl font-extrabold text-gray-900"
            >
              <span>Total Pembayaran</span>
              <span id="total-display" class="text-red-600">Rp 0</span>
            </div>
          </div>

          <button
            id="checkout-button"
            onclick="checkoutToWhatsapp()"
            class="w-full mt-6 px-4 py-3 bg-green-500 text-white font-semibold rounded-lg shadow-lg hover:bg-green-600 transition duration-300 flex items-center justify-center space-x-2 disabled:opacity-50"
            disabled
          >
            <i class="fa-brands fa-whatsapp fa-lg"></i>
            <span>Lanjut ke Pembayaran via WhatsApp</span>
          </button>
          <p
            id="empty-cart-text"
            class="text-center text-sm text-gray-500 mt-2 hidden"
          >
            Keranjang kosong, tambahkan produk terlebih dahulu.
          </p>

          <div class="mt-6 border-t pt-4">
            <label
              for="coupon"
              class="block text-sm font-medium text-gray-700 mb-2"
              >Kode Kupon:</label
            >
            <div class="flex space-x-2">
              <input
                type="text"
                id="coupon"
                placeholder="Masukkan kode kupon"
                class="flex-grow border-gray-300 p-2 rounded-lg focus:ring-red-500 focus:border-red-500"
              />
              <button
                class="flex-shrink-0 px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition duration-150 text-sm font-medium"
              >
                Terapkan
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

 <script type="module" src="/scripts/cart-logic.js" is:inline></script>
</BaseLayout>